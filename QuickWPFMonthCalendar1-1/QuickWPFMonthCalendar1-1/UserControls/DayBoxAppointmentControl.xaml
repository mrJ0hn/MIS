<UserControl x:Class="DayBoxAppointmentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WpfCal="clr-namespace:QuickWPFMonthCalendar" WpfCal:DragDropHelper.IsDragSource="True"
    Tag="{Binding Path=AppointmentID}">
    <Border x:Name="BorderElement" CornerRadius="5" BorderBrush="#015c65" Background="White" BorderThickness="1" Margin="2,2,2,1">
        <TextBlock x:Name="DisplayText" Text="{Binding Path=Subject}" FontSize="12" Padding="2" TextWrapping="Wrap"/>
    </Border>
</UserControl>
