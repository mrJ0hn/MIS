<Window x:Class="MIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIS"
        xmlns:res="clr-namespace:MIS.Properties"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="#015c65"/>
        <Border Grid.Column="0" Grid.Row="1" BorderBrush="#015c65" BorderThickness="0,0,1,0">
            <StackPanel 
                    Background="#e4ebec">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="auto"/>
                        <Setter Property="Height" Value="90"/>
                        <Setter Property="Background" Value="#e4ebec"/>
                        <Setter Property="BorderBrush" Value="#e4ebec"/>
                    </Style>
                    <Style TargetType="Label">
                        <Setter Property="FontFamily" Value="Myriad Pro"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="Foreground" Value="#015c65"/>
                    </Style>
                    <Style TargetType="Image">
                        <Setter Property="Height" Value="60"/>
                    </Style>
                </StackPanel.Resources>
                <Button>
                    <StackPanel>
                        <Image Source="Pictures/Schedule.png"/>
                        <Label Content="{x:Static res:Resources.ButtonSchedule}"/>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel>
                        <Image Source="Pictures/People.png"/>
                        <Label Content="{x:Static res:Resources.ButtonPatient}"/>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel>
                        <Image Source="Pictures/Statistica.png"/>
                        <Label Content="{x:Static res:Resources.ButtonStatistics}"/>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel>
                        <Image Source="Pictures/Settings.png"/>
                        <Label Content="{x:Static res:Resources.ButtonSettings}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
