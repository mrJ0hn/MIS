<Window x:Class="MIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIS"
        xmlns:res="clr-namespace:MIS.Properties"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="605.527" Width="1188.77">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="#015c65"/>

        <Border Grid.Column="0" Grid.Row="1" BorderBrush="#015c65" BorderThickness="0,0,1,0">
            <StackPanel 
                    Background="#e4ebec">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="auto"/>
                        <Setter Property="Height" Value="90"/>
                        <Setter Property="Background" Value="#e4ebec"/>
                        <Setter Property="BorderBrush" Value="#e4ebec"/>
                    </Style>
                    <Style TargetType="Label">
                        <Setter Property="FontFamily" Value="Myriad Pro"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="Foreground" Value="#015c65"/>
                    </Style>
                    <Style TargetType="Image">
                        <Setter Property="Height" Value="60"/>
                    </Style>
                </StackPanel.Resources>
                <Button>
                    <StackPanel>
                        <Image Source="Pictures/Schedule.png"/>
                        <Label Content="{x:Static res:Resources.ButtonSchedule}"/>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel>
                        <Image Source="Pictures/People.png"/>
                        <Label Content="{x:Static res:Resources.ButtonPatient}"/>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel>
                        <Image Source="Pictures/Statistica.png"/>
                        <Label Content="{x:Static res:Resources.ButtonStatistics}"/>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel>
                        <Image Source="Pictures/Settings.png"/>
                        <Label Content="{x:Static res:Resources.ButtonSettings}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Grid.Row="1" Margin="0,0,0,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="FontFamily" Value="BodoniNovaNr"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Foreground" Value="#015c65"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>

            <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="#015c65" BorderThickness="0,0,0,1">
                <StackPanel VerticalAlignment="Center">
                    <StackPanel.Resources>
                        <Style TargetType="Label">
                            <Setter Property="FontFamily" Value="Myriad Pro"/>
                            <Setter Property="FontSize" Value="22"/>
                            <Setter Property="Foreground" Value="#015c65"/>
                        </Style>
                    </StackPanel.Resources>
                    <Label Content="Расписание"/>
                </StackPanel>
            </Border>

            <Grid Grid.Column="0" Grid.Row="1" Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" BorderBrush="#015c65" BorderThickness="0,0,0,1">
                    <Label Content="Сотрудники"/>
                </Border>
                <ListView Grid.Row="1" Margin="5,5,0,0" VerticalAlignment="Stretch"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" BorderBrush="#015c65" BorderThickness="0,0,0,1">
                    <Label Content="Расписание на неделю"/>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.Resources>
                        <Style TargetType="Label">
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Margin" Value="0,15,0,0"/>
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Myriad Pro"/>
                            <Setter Property="Foreground" Value="#015c65"/>
                        </Style>
                    </Grid.Resources>

                    <Label Grid.Column="0" Grid.Row="0" Content="Дата"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="Врач"/>
                    <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"/>

                    <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="0,15,0,0">
                        <DatePicker Focusable="False" />
                    </StackPanel>

                    <Button x:Name="btnNewVisitor" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Height="90" Width="140" 
                            HorizontalAlignment="Right" Margin="0,10,10,0" Background="White" BorderBrush="White"
                            Click="btnNewVisitor_Click">
                        <StackPanel>
                            <Image Source="Pictures/AddClient.png" Height="55"/>
                            <Label Content="{x:Static res:Resources.ButtonAddClient}" Margin="0"/>
                        </StackPanel>
                    </Button>

                </Grid>

                <local:CustomCalendar Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,20,10,0"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
