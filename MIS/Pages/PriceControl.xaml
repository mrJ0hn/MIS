<Page x:Class="MIS.Pages.PriceControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:res="clr-namespace:MIS.Properties"
      xmlns:local="clr-namespace:MIS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1000"
      Title="PriceControl">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Column="0" Grid.RowSpan="2" Padding="0" Margin="0">
            <GroupBox.Header>
                <Label Style="{StaticResource LableGroupBox}" Content="{x:Static res:Resources.PriceList}"/>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="gridPrice" Grid.Row="0"
                          VerticalAlignment="Stretch" BorderBrush="#33bcba" 
                          BorderThickness="0,0,0,1" FontSize="10" Margin="0,0,0,10"
                          AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{x:Static res:Resources.Department}" Width="auto"/>
                        <DataGridTextColumn Header="{x:Static res:Resources.Group}" Width="auto"/>
                        <DataGridTextColumn Header="{x:Static res:Resources.NameService}" Width="*"/>
                        <DataGridTextColumn Header="{x:Static res:Resources.Cost}" Width="auto"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Row="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Content="{x:Static res:Resources.Department}" Style="{StaticResource LabelLine}"/>
                    <controls:DropDownButton  Grid.Column="1" Grid.Row="0"
                                      HorizontalContentAlignment="Left"
                                      DisplayMemberPath="FullName"
                                      Height="30"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="{x:Static res:Resources.Group}" Style="{StaticResource LabelLine}"/>
                    <controls:DropDownButton  Grid.Column="1" Grid.Row="1"
                                      HorizontalContentAlignment="Left"
                                      DisplayMemberPath="FullName"
                                      Height="30" />
                    <Label Grid.Column="0" Grid.Row="2" Content="{x:Static res:Resources.NameService}" Style="{StaticResource LabelLine}"/>
                    <TextBox Grid.Column="1" Grid.Row="2" Style="{StaticResource TextBox}" />
                    <Label Grid.Column="0" Grid.Row="3" Content="{x:Static res:Resources.Cost}" Style="{StaticResource LabelLine}"/>
                    <TextBox Grid.Column="1" Grid.Row="3" Style="{StaticResource TextBox}"/>
                    <Button Grid.Column="1" Grid.Row="4" Content="{x:Static res:Resources.ButtonAdd}" Width="100" Height="20" HorizontalAlignment="Right"/>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Column="1" Grid.Row="0" Padding="0" Margin="0">
            <GroupBox.Header>
                <Label Style="{StaticResource LableGroupBox}" Content="ОТДЕЛЕНИЕ"/>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="gridOffice" Grid.Row="0" VerticalAlignment="Stretch" 
                          BorderBrush="#33bcba" BorderThickness="0,0,0,1" FontSize="10" 
                          Margin="0,0,0,10" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{x:Static res:Resources.TitleDepartment}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="{x:Static res:Resources.NameService}" Style="{StaticResource LabelLine}"/>
                    <TextBox Grid.Column="1" Grid.Row="0" Style="{StaticResource TextBox}" />
                    <Button Grid.Column="1" Grid.Row="1" Content="{x:Static res:Resources.ButtonAdd}" Width="100" Height="20" HorizontalAlignment="Right"/>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Column="1" Grid.Row="1" Padding="0" Margin="0">
            <GroupBox.Header>
                <Label Style="{StaticResource LableGroupBox}" Content="{x:Static res:Resources.TitleGroups}"/>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="gridGroup" Grid.Row="0" VerticalAlignment="Stretch" 
                          BorderBrush="#33bcba" BorderThickness="0,0,0,1" FontSize="10" Margin="0,0,0,10"
                          AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{x:Static res:Resources.Department}" Width="*"/>
                        <DataGridTextColumn Header="{x:Static res:Resources.Group}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Row="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="{x:Static res:Resources.Department}" Style="{StaticResource LabelLine}"/>
                    <controls:DropDownButton  Grid.Column="1" Grid.Row="0"                                     
                                      HorizontalContentAlignment="Left"
                                      DisplayMemberPath="FullName"
                                      Height="30"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="{x:Static res:Resources.NameGroup}" Style="{StaticResource LabelLine}"/>
                    <TextBox Grid.Column="1" Grid.Row="1" Style="{StaticResource TextBox}"/>
                    <Button Grid.Column="1" Grid.Row="2" Content="{x:Static res:Resources.ButtonAdd}" Width="100" Height="20" HorizontalAlignment="Right"/>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</Page>
