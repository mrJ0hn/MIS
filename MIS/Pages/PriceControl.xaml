<Page x:Class="MIS.Pages.PriceControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:res="clr-namespace:MIS.Properties"
      xmlns:local="clr-namespace:MIS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1000"
      Title="PriceControl">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.8*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="gridDoctors" Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" BorderBrush="Gray" BorderThickness="0,0.5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Фамилия" Width="*"/>
                    <DataGridTextColumn Header="Имя" Width="*"/>
                    <DataGridTextColumn Header="Отчество" Width="*"/>
                    <DataGridTextColumn Header="Специализация" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Margin="30,10" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Content="{x:Static res:Resources.Surname}" Style="{StaticResource LabelLine}"/>
                <TextBox Grid.Column="1" Grid.Row="0" Style="{StaticResource TextBox}" />

                <Label Grid.Column="0" Grid.Row="1" Content="{x:Static res:Resources.FirstName}" Style="{StaticResource LabelLine}"/>
                <TextBox Grid.Column="1" Grid.Row="1" Style="{StaticResource TextBox}"/>

                <Label  Grid.Column="0" Grid.Row="2" Content="{x:Static res:Resources.MiddleName}" Style="{StaticResource LabelLine}"/>
                <TextBox  Grid.Column="1" Grid.Row="2" Style="{StaticResource TextBox}"/>

                <Label Grid.Column="0" Grid.Row="3" Content="{x:Static res:Resources.Specailization}" Style="{StaticResource LabelLine}"/>
                <!--<ComboBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Style="{StaticResource ComboBox}"/>-->

                <controls:DropDownButton  Grid.Column="1" Grid.Row="3"
                                      x:Name="comboBoxSpecialization"
                                      HorizontalContentAlignment="Left"
                                      DisplayMemberPath="FullName"
                                      Height="30"/>

                <Button Grid.Column="1" Grid.Row="4" Content="{x:Static res:Resources.ButtonAdd}" Width="100" HorizontalAlignment="Right"
                     Margin="0,20,0,0"/>
            </Grid>
        </Grid>
        <Border Grid.RowSpan="2" Grid.Column="1" VerticalAlignment="Stretch" BorderThickness="6,0,0,0" BorderBrush="#015c65"/>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.8*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DataGrid  Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" BorderBrush="Gray" BorderThickness="0,0.5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Фамилия" Width="*"/>
                        <DataGridTextColumn Header="Имя" Width="*"/>
                        <DataGridTextColumn Header="Отчество" Width="*"/>
                        <DataGridTextColumn Header="Специализация" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Margin="30,10" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="{x:Static res:Resources.Surname}" Style="{StaticResource LabelLine}"/>
                    <TextBox Grid.Column="1" Grid.Row="0" Style="{StaticResource TextBox}" />

                    <Label Grid.Column="0" Grid.Row="1" Content="{x:Static res:Resources.FirstName}" Style="{StaticResource LabelLine}"/>
                    <TextBox Grid.Column="1" Grid.Row="1" Style="{StaticResource TextBox}"/>

                    <Label Grid.Column="0" Grid.Row="2" Content="{x:Static res:Resources.Specailization}" Style="{StaticResource LabelLine}"/>
                    <!--<ComboBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Style="{StaticResource ComboBox}"/>-->

                    <controls:DropDownButton  Grid.Column="1" Grid.Row="2"
                                      
                                      HorizontalContentAlignment="Left"
                                      DisplayMemberPath="FullName"
                                      Height="30"/>

                    <Button Grid.Column="1" Grid.Row="3" Content="{x:Static res:Resources.ButtonAdd}" Width="100" HorizontalAlignment="Right"
                     Margin="0,20,0,0"/>
                </Grid>
            </Grid>
            <Border Grid.Row="1" VerticalAlignment="Stretch" BorderThickness="0,6,0,0" BorderBrush="#015c65"/>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.8*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DataGrid  Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" BorderBrush="Gray" BorderThickness="0,0.5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Фамилия" Width="*"/>
                        <DataGridTextColumn Header="Имя" Width="*"/>
                        <DataGridTextColumn Header="Отчество" Width="*"/>
                        <DataGridTextColumn Header="Специализация" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Margin="30,10" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="{x:Static res:Resources.Surname}" Style="{StaticResource LabelLine}"/>
                    <TextBox Grid.Column="1" Grid.Row="0" Style="{StaticResource TextBox}" />

                    <Label Grid.Column="0" Grid.Row="1" Content="{x:Static res:Resources.FirstName}" Style="{StaticResource LabelLine}"/>
                    <TextBox Grid.Column="1" Grid.Row="1" Style="{StaticResource TextBox}"/>

                    <Label Grid.Column="0" Grid.Row="2" Content="{x:Static res:Resources.Specailization}" Style="{StaticResource LabelLine}"/>
                    <!--<ComboBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Style="{StaticResource ComboBox}"/>-->

                    <controls:DropDownButton  Grid.Column="1" Grid.Row="2"
                                      
                                      HorizontalContentAlignment="Left"
                                      DisplayMemberPath="FullName"
                                      Height="30"/>

                    <Button Grid.Column="1" Grid.Row="3" Content="{x:Static res:Resources.ButtonAdd}" Width="100" HorizontalAlignment="Right"
                     Margin="0,20,0,0"/>
                </Grid>
            </Grid>
        </Grid>
        <Border Grid.Column="3" VerticalAlignment="Stretch" BorderThickness="6,0,0,0" BorderBrush="#015c65"/>
    </Grid>
</Page>
