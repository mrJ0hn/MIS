<Page x:Class="MIS.Pages.PriceControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:res="clr-namespace:MIS.Properties"
      xmlns:local="clr-namespace:MIS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1000"
      Title="PriceControl">

    <Grid Background="#50e4ebec">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.8*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="gridPrice" Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" BorderBrush="#015c65" BorderThickness="1,1,1,1" Margin="20,5,20,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Наименование услуги" Width="*"/>
                    <DataGridTextColumn Header="Стоимость" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Margin="20,0" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="Отделение" Style="{StaticResource LabelLine}"/>
                <controls:DropDownButton  Grid.Column="1" Grid.Row="0"
                                      HorizontalContentAlignment="Left"
                                      DisplayMemberPath="FullName"
                                      Height="30"/>
                <Label Grid.Column="0" Grid.Row="1" Content="{x:Static res:Resources.Group}" Style="{StaticResource LabelLine}"/>
                <controls:DropDownButton  Grid.Column="1" Grid.Row="1"
                                      HorizontalContentAlignment="Left"
                                      DisplayMemberPath="FullName"
                                      Height="30"/>
                
                <Label Grid.Column="0" Grid.Row="2" Content="Наименование услуги" Style="{StaticResource LabelLine}"/>
                <TextBox Grid.Column="1" Grid.Row="2" Style="{StaticResource TextBox}" />

                <Label Grid.Column="0" Grid.Row="3" Content="Стоимость" Style="{StaticResource LabelLine}"/>
                <TextBox Grid.Column="1" Grid.Row="3" Style="{StaticResource TextBox}"/>

                <Button Grid.Column="1" Grid.Row="4" Content="{x:Static res:Resources.ButtonAdd}" Width="100" HorizontalAlignment="Right"
                     Margin="0,10,0,0"/>
            </Grid>
        </Grid>
        <Border Grid.RowSpan="2" Grid.Column="1" VerticalAlignment="Stretch" BorderThickness="2,0,0,0" BorderBrush="#015c65"/>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.8*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DataGrid  Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" BorderBrush="#015c65" BorderThickness="1,1,1,1" Margin="20,5,20,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Наменования отделений" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Margin="20,0" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Наименование отделения" Style="{StaticResource LabelLine}"/>
                    <TextBox Grid.Column="1" Grid.Row="0" Style="{StaticResource TextBox}" />
                    <Button Grid.Column="1" Grid.Row="3" Content="{x:Static res:Resources.ButtonAdd}" Width="100" HorizontalAlignment="Right"
                     Margin="0,10,0,0"/>
                </Grid>
            </Grid>
            <Border Grid.Row="1" VerticalAlignment="Stretch" BorderThickness="0,2,0,0" BorderBrush="#015c65"/>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DataGrid  Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" BorderBrush="#015c65" BorderThickness="1,1,1,1" Margin="20,5,20,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Отделение" Width="*"/>
                        <DataGridTextColumn Header="Группа" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <Grid Margin="20,0" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Content="Отделение" Style="{StaticResource LabelLine}"/>
                    <controls:DropDownButton  Grid.Column="1" Grid.Row="0"
                                      
                                      HorizontalContentAlignment="Left"
                                      DisplayMemberPath="FullName"
                                      Height="30"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="Наименование группы" Style="{StaticResource LabelLine}"/>
                    <TextBox Grid.Column="1" Grid.Row="1" Style="{StaticResource TextBox}" />
                    <Button Grid.Column="1" Grid.Row="2" Content="{x:Static res:Resources.ButtonAdd}" Width="100" HorizontalAlignment="Right"
                     Margin="0,10,0,0"/>
                </Grid>
            </Grid>
        </Grid>
        <Border Grid.Column="3" VerticalAlignment="Stretch" BorderThickness="6,0,0,0" BorderBrush="#015c65"/>
    </Grid>
</Page>
