<Window x:Class="MIS.AddClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIS"
        mc:Ignorable="d"
        Title="AddClient" Height="600" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="BodoniNovaNr"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Foreground" Value="#015c65"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="BorderBrush" Value="#015c65"/>
                <Setter Property="Margin" Value="0,5,5,5"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="BorderBrush" Value="#e4ebec"/>
            </Style>

        </Grid.Resources>

        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Background="#015c65"/>
        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Content="Новый пациент" Foreground="White" Cursor="ScrollWE" FontWeight="Bold" HorizontalAlignment="Center"/>

        <Label Grid.Column="0" Grid.Row="2" Content="Фамилия"/>
        <Label Grid.Column="0" Grid.Row="3" Content="Имя"/>
        <Label Grid.Column="0" Grid.Row="4" Content="Отчество"/>

        <TextBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBox Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2"/>
        <TextBox Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2"/>

        <StackPanel Grid.Column="0" Grid.Row="5" Margin="5,0,5,0" VerticalAlignment="Center">
            <DatePicker Focusable="False" />
        </StackPanel>

        <Label Grid.Column="1" Grid.Row="5" Content="Время" HorizontalAlignment="Right"/>
        <ComboBox Grid.Column="2" Grid.Row="5" Margin="10,5,10,5"/>



        <Button Grid.Column="0" Grid.Row="7" Content="Поиск"/>


    </Grid>
</Window>
