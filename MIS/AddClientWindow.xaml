<Window x:Class="MIS.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIS"
        mc:Ignorable="d"
        Title="AddClient" Height="600" Width="430"
         WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">

        <Label Content="Новый пациент" Foreground="White" FontSize="15"  FontWeight="Bold"
               VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
               Background="#015c65" Height="40"/>
        <Grid Margin="17">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="FontFamily" Value="BodoniNovaNr"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="Foreground" Value="#015c65"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                </Style>

                <Style TargetType="TextBox">
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="BorderBrush" Value="#015c65"/>
                    <Setter Property="Margin" Value="0,7,0,7"/>
                    <Setter Property="FontSize" Value="15"/>
                </Style>

            </Grid.Resources>

            <Label Grid.Column="0" Grid.Row="0" Content="Фамилия"/>
            <Label Grid.Column="0" Grid.Row="1" Content="Имя"/>
            <Label Grid.Column="0" Grid.Row="2" Content="Отчество"/>
            <Label Grid.Column="0" Grid.Row="3" Content="Дата"/>
            <Label Grid.Column="0" Grid.Row="4" Content="Время"/>
            <Label Grid.Column="0" Grid.Row="5" Content="Врач"/>
            <Label Grid.Column="0" Grid.Row="6" Content="Комментарий"/>

            <TextBox Grid.Column="1" Grid.Row="0"/>
            <TextBox Grid.Column="1" Grid.Row="1"/>
            <TextBox Grid.Column="1" Grid.Row="2"/>
            <DatePicker Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" FontFamily="BodoniNovaNr" FontSize="15" Foreground="#015c65"/>

            <ComboBox Grid.Column="1" Grid.Row="5" VerticalAlignment="Center"/>
            <TextBox VerticalContentAlignment="Top" Grid.Column="1" Grid.Row="6" VerticalAlignment="Center" Height="80"/>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#e4ebec"/>
                    <Setter Property="BorderBrush" Value="#015c65"/>
                    <Setter Property="Margin" Value="6"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                    <Setter Property="Width" Value="70"/>
                    <Setter Property="FontFamily" Value="BodoniNovaNr"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Foreground" Value="#015c65"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="Найти"/>
            <Button Content="Добавить"/>
        </StackPanel>

    </StackPanel>
</Window>
